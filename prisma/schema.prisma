generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tag{
  id Int @id @default(autoincrement())
  slika String
  ime String
  dimenzije TagDimenzija[]
}
model Dimenzija{
  id Int @id @default(autoincrement())
  ime String
  tag TagDimenzija[]
}

model TagDimenzija{
  tag Tag @relation(fields: [tagId],references: [id])
  tagId Int
  cena Int
  dimenzija Dimenzija @relation(fields: [dimenzijaId],references: [id])
  dimenzijaId Int
  @@id([tagId,dimenzijaId])
}
